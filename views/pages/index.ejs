<!DOCTYPE html>
<html>
    <head>
        <title>大家來翻譯</title>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
        <link rel="stylesheet" type="text/css" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css" />
        <link rel="stylesheet" type="text/css" href="/css/index.css" />
    </head>

    <body>
        <% include ../modules/nav.ejs %>

        <div class="container">
            <% for (var i = 0; i < translations.length; ++i) { %>
                <% var translation = translations[i]; %>
                <div class="col-md-6 col-md-offset-3">
                    <div><h2><%= translation.title %></h2></div>
                    <div class="ct-image">
                        <img src="<%= translation.post.imageUrl %>"></img>
                        <% for (var j = 0; j < translation.texts.length; ++j) { %>
                            <% var text = translation.texts[j]; %>
                            <div class="ct-blur-overlay"
                                style="clip: rect(<%= text.overlay.rect.top %>px,
                                    <%= text.overlay.rect.right %>px,
                                    <%= text.overlay.rect.bottom %>px,
                                    <%= text.overlay.rect.left %>px)">
                                <img src="<%= translation.post.imageUrl %>"></img>
                            </div>
                            <div class="ct-caption" style="top: <%= text.content.rect.top %>px;
                                left: <%= text.content.rect.left %>px;
                                width: <%= text.content.rect.width %>px;
                                font-size: <%= text.content.fontSize %>px">
                                <div><%= text.content.words %></div>
                            </div>
                        <% } %>
                    </div>
                    <p>
                        <div class="btn-group" role="group">
                            <button type="button" class="btn btn-default">出處</button>
                            <button type="button" class="btn btn-default">修正</button>
                        </div>
                    </p>
                    <hr>
                </div>
            <% } %>
        </div>
    </body>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script type="text/javascript" src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>
</html>
